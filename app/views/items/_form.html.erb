
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for(item) do |f| %>
      <%= f.input :name, placeholder: "Artikel", error: 'Artikel is verplicht' %>
      <%= f.input :shop, placeholder: "Winkel" , error: 'Winkel is verplicht' %>
      <%= f.input :quantity, placeholder: "Hoeveelheid", error: 'Hoeveelheid is verplicht' %>
      <%= f.submit "Voeg Artikel toe"%>
      <% end %>
    </div>
  </div>
</div>
